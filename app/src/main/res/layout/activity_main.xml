<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andyshon.three_things_today.Activity.MainActivity">

    <TextView
        android:textStyle="italic|bold"
        android:fontFamily="cursive"
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showDatePickerDialog"
        android:text="@string/there_will_be_date"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/tv_first_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDate"
        android:hint="@string/coded_a_lot"
        android:fontFamily="sans-serif-condensed"
        android:inputType="textAutoCorrect|textCapSentences"
        android:maxLines="1" />

    <EditText
        android:id="@+id/tv_second_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_first_edit_text"
        android:hint="@string/played_table_tennis"
        android:fontFamily="sans-serif-condensed"
        android:inputType="textAutoCorrect|textCapSentences"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/tv_third_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_second_edit_text"
        android:hint="@string/read_the_book_the_basis"
        android:fontFamily="sans-serif-condensed"
        android:inputType="textAutoCorrect|textCapSentences"
        android:maxLines="1" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_third_edit_text"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
